<div class="confirm_content">
<h3 class="confirm_topText">ダーリンうちは以下の内容で送信するっちゃ！</h3>

<%= form_with(model: @tweet, url: tweets_path, local: true) do |form| %>
  <%= form.hidden_field :content %>

  <p>本文:<%= @tweet.content %></p>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @tweet, url: new_tweet_path, method: 'get', local: true) do |form| %>
      <%= form.hidden_field :content %>
      <%= form.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
</div>

