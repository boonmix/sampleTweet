<div class="container">
<%= form_with(model: @tweet, local: true ,url: choose_new_or_edit ) do |form| %>

  
      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
   
  

  <div class="field">
    
    <%= form.text_area :content ,:placeholder => "内容をここに書くっちゃ！" %>
  </div>

  <div class="actions">
    <%= form.submit "投稿",class:"btn btn-primary"  %>
  </div>
<% end %>
</div><!-- container -->
